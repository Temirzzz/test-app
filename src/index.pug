doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap")
    style 
      include ./styles/style.css
    title Document
  body 
    main.container 
      h1 Bitrix
      h3 Добавить/Обновить
      form(id="reviewForm")
        input(type="hidden" id="hiddenId")
        label(for="initials") ФИО
        input(type="text" id="initials" placeholder="ФИО")
        label(for="regDate") Дата регистрации
        input(type="date" id="regDate" placeholder="Дата регистрации")
        label(for="payment") Размер оплаты
        input(type="number" id="payment" placeholder="Размер оплаты")
        button(type="submit" class="btn btn-outline-success") Добавить/Обновить
      .table-responsive 
        table(class="table table-sm table__sort" id="row-table")
          thead(class="text-center")
            th(class="th__name" draggable="true") ФИО
            th Дата регистрации
            th Размер оплаты
            th Действие
            tbody(id="table__body" class="text-center") 
             
             
    script(src="https://www.gstatic.com/firebasejs/8.2.6/firebase-app.js") 
    script(src="https://www.gstatic.com/firebasejs/8.2.6/firebase-database.js")  
